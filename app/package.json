{
  "name": "@zorlack/syncpit",
  "version": "0.4.0-alpha.1",
  "description": "Ephemeral real-time collaborative whiteboard - no accounts, no bullshit",
  "main": "welld.js",
  "bin": {
    "syncpit": "./welld.js"
  },
  "files": [
    "welld.js",
    "persistence.js",
    "dist/",
    "scripts/"
  ],
  "scripts": {
