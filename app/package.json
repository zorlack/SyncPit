  },
  "homepage": "https://github.com/zorlack/SyncPit#readme",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "dependencies": {
    "express": "^4.18.2",
    "qrcode": "^1.5.4",
    "ws": "^8.14.2",
    "y-websocket": "^1.5.0",
    "yjs": "^13.6.10"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
